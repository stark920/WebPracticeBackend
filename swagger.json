          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Amin"
                },
                "email": {
                  "type": "string",
                  "example": "abcd1234@abc.abc"
                },
                "password": {
                  "type": "string",
                  "example": "abcd1234"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "註冊成功，headers 中帶有 token",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "boolean",
                  "example": true
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "Amin"
                    },
                    "gender": {
                      "type": "string",
                      "example": "others"
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "401": {
            "description": "註冊失敗",
